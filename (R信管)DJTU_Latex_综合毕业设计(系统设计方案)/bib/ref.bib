@phdthesis{__2022,
	address = {保定},
	type = {硕士学位论文},
	title = {线上初级汉语口语课过程性考核模式设计与应用            ——以河北大学为例},
	url = {https://doi.org/10.27103/d.cnki.ghebu.2021.001347},
	abstract = {2020年新冠疫情在全球范围内蔓延并且成为常态化,给全球的对外汉语教学都带来了很大的挑战。线上教学改变了传统的面对面的教学的方法,对教学行为产生了很大的影响。其中最大的改变莫过于教学方式从线下转到线上。虽然网络技术的飞速发展给线上教学提供了很大的便利,但是也给传统的线下对外汉语教学带来了挑战,对考核方式的影响尤为明显。考核是教学活动中不可或缺的重要环节,通过考核能够有效检查学生的学习成果和对知识的掌握程度,起到反馈教学信息的作用。传统的考核模式主要由期中和期末考试组成,笔试所占比重较大,但是线上教学十分依赖网络因素,在线上教学中应用传统的考核模式存在困难,例如考试监督困难,教师通过网络难以起到很大的监督作用,学生需要准备多部移动设备进行考试监督,对学生来说也是比较困难的。本文主要从新型考核模式——过程性考核模式入手,观察分析过程性考核模式在河北大学留学生初级汉语口语课程中的应用情况。以河北大学初级B班的巴基斯坦留学生为研究对象,根据学生的实际情况和汉语水平设计过程性考核内容,对过程性考核模式实施过程中的典型案例进行分析,通过发放问卷的方式,对学生将过程性考核在口语课堂中实施的满意度进行调查,通过学生的反馈以及对过程性考核和传统考核的考勤、成绩等进行对比,分析过程性考核在线上口语课中的实施效果,根据实施过程中出现的各种问题,提出自己对实施过程性考核的反思和建议。旨在找到科学合理的适合对外汉语线上教学的考核模式,更大程度地提高学生汉语口语水平,提高课堂教学质量。},
	language = {zh},
	urldate = {2025-11-30},
	school = {河北大学},
	author = {{刘慧}},
	collaborator = {{葆乐心}},
	year = {2022},
	keywords = {/unread, 对外汉语口语教学, 过程性考核, 线上教学},
}

